<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="UTF-8">
    </head>
    <script>
        function ENQUANTO() {
    var usuário;
    var senha;
    var recorrente;
    
    recorrente = true;
    while (recorrente == true) {
        usuário = window.prompt('Enter a value for usuário');
        senha = window.prompt('Enter a value for senha');
        if (usuário == "Gustavo") {
            if (senha == "9876543210") {
                window.alert("Você será redirecionado à página inicial");
                recorrente = false;
            }
        }
    }
}
function FAÇA() {
    var usuário;
    var senha;
    var recorrente;
    
    recorrente = true;
    do {
        usuário = window.prompt('Enter a value for usuário');
        senha = window.prompt('Enter a value for senha');
        if (usuário == "Gustavo") {
            if (senha == "9876543210") {
                window.alert("Você será redirecionado à página inicial");
                recorrente = false;
            }
        }
    } while (recorrente == true);
}

    </script>
    <body>
        <button onclick="FAÇA()">LOGIN FAÇA</button>
        <button onclick="ENQUANTO()">LOGIN ENQUANTO</button>
    </body>
</html>
